<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:id="@+id/signUpFacebookLayout"
    android:layout_height="wrap_content"
    android:layout_marginTop="28dp"
    android:background="@drawable/white_rounded_background"
    android:padding="12dp">

    <ImageView
        android:id="@+id/facebookLogo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/logo_facebook"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/facebookButtonText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/facebookButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue with Facebook"
        android:textColor="@color/black"
        android:textSize="@dimen/body_text"
        android:textStyle="bold"
        android:fontFamily="@font/nrt_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/facebookLogo"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
