<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with no action bar. -->
    <style name="Theme.Plynt.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (Blue). -->
        <item name="colorPrimary">@color/plynt_blue</item>
        <item name="colorPrimaryVariant">@color/dark_grey</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Yellow). -->
        <item name="colorSecondary">@color/plynt_yellow</item>
        <item name="colorSecondaryVariant">@color/turquoise</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
</resources>
